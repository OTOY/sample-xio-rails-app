<div class="devise_center">
  <h1>Sign In</h1>
  <div class="col-md-offset-2">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "new_user form-horizontal", :role => "form"}) do |f| %>
      <div class="form-group">
        <label for="inputEmail1" class="col-md-2 control-label">Email</label>
        <div class="col-md-8">
          <%= f.email_field :email, :autofocus => true, :placeholder => "Email address", :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label for="inputEmail1" class="col-md-2 control-label">Password</label>
        <div class="col-md-8">
          <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-8">
            <div class="checkbox align-left">
              <label>
                <%= f.check_box :remember_me %> Remember me
              </label>
            </div>
          </div>
        </div>
      <% end -%>

      <div class="col-md-offset-2 col-md-8 align-left">
        <!-- <p><a href="<%= new_registration_path(resource_name) %>">Need an account?</a></p> -->
        <p><a href="<%= new_password_path(resource_name) %>">Forgot your password?</a></p>
      </div>

      <div class="form-group">
        <div class="col-md-10">
          <%= f.submit "Sign in", :class => "btn btn-lg btn-success" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
