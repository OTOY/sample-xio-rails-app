<div class="col-sm-12 no-padding">

  <!-- File Providers -->

  <div class="panel panel-default">

    <div class="panel-heading">
      <h3 class="panel-title">File Providers</h3>
    </div>

    <div class="panel-body">
      <p>
        Here's a list of all the file storage providers linked to your account.
      </p>


      <table class="table table-striped table-hover">

        <thead>
          <tr>
            <th>File Storage Provider</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%- current_user.file_provider_credentials.each do |provider| %>
            <tr>
              <td>
                <%= provider.human_type %> <span class="provider-label">(<%= provider.label %>)</span>                
              </td>
              <td class="align-right">
                <%= link_to content_tag(:i, "", :class => "glyphicon glyphicon-trash") + " Delete", users_file_provider_path(provider), :method => :delete, :confirm => "Are you sure?", :class => "btn btn-danger btn-xs" %>
              </td>
            </tr>
          <%- end %>
        </tbody>
      </table>

      <a href="#addProvider" class="btn btn-primary right" data-toggle="modal"><i class="glyphicon glyphicon-plus"></i> Add Provider</a>

    </div>
  </div>

  <!-- Account Info -->

  <div class="panel panel-default">

    <div class="panel-heading">
      <h3 class="panel-title">Account Info</h3>
    </div>

    <div class="panel-body">

      <div class="col-md-12">
        <div class="col-md-12">

          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => "form", :class => "form-horizontal" }) do |f| %>

            <div class="form-group col-md-12">
              <label for="inputFName" class="col-sm-4 control-label">First name</label>
              <div class="col-md-8">
                <%= f.text_field :first_name, :placeholder => "First name", :class => "form-control", :id => "inputFName" %>
              </div>
            </div>

            <div class="form-group col-md-12">
              <label for="inputLName" class="col-sm-4 control-label">Last name</label>
              <div class="col-md-8">
                <%= f.text_field :last_name, :placeholder => "Last name", :class => "form-control", :id => "inputLName" %>
              </div>
            </div>

            <div class="form-group col-md-12">
              <label for="inputEmail" class="col-sm-4 control-label">Email address</label>
              <div class="col-md-8">
                <%= f.email_field :email, :placeholder => "Email address", :class => "form-control", :id => "inputEmail" %>
              </div>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group col-md-12">
              <label for="inputPass" class="col-sm-4 control-label">New password</label>
              <div class="col-md-8">
                <%= f.password_field :password, :autocomplete => "off", :placeholder => "New password", :class => "form-control", :id => "inputPass" %>
              </div>
            </div>

            <div class="form-group col-md-12">
              <label for="inputPass3" class="col-sm-4 control-label">Current password</label>
              <div class="col-md-8">
                <%= f.password_field :current_password, :autocomplete => "off", :placeholder => "Current password", :class => "form-control", :id => "inputPass3" %>
              </div>
            </div>

            <div class="form-group col-md-12">
              <div class="col-md-8 col-md-offset-4">
                <div class="col-md-4 no-pad-left">
                  <%= f.submit "Update info", :class => "btn btn-success" %>
                </div>
                <div class="col-md-4 align-right">
                  <%= link_to content_tag(:i, "", :class => "glyphicon glyphicon-trash") + " Cancel my account", registration_path(resource_name), :method => :delete, :confirm => "Are you sure? All information will be lost!", :class => "btn btn-danger", :id => "cancel-account-btn" %>
                </div>
              </div>
            </div>

          <% end %>

        </div>
      </div>
    </div>


  </div>
</div>

<%= render :template => '/shared/_add_provider' %>
